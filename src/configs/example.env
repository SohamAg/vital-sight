# Input
DEFAULT_SOURCE=webcam          # webcam | file
DEFAULT_VIDEO_PATH=./data/samples/test.mp4
TARGET_WIDTH=1280
TARGET_HEIGHT=720
TARGET_FPS=15

# Detector
YOLO_MODEL=yolov8n.pt
YOLO_CONF=0.4

# Pose / Temporal thresholds
ANGLE_THR_DEG=70               # torso >= 70° from vertical -> supine
DROP_THR_PX=60                 # centroid Δy threshold within 0.5s
MOTION_THR=2.5                 # mean landmark Δ under this -> idle
IMMOBILE_T_SEC=8.0             # consecutive idle seconds -> immobile
ALERT_SCORE_THR=0.80           # collapse/prolonged_immobility score


